# ===========================================
# Overture - AI Hedge Fund Configuration
# ===========================================

# --- LLM Providers ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Default LLM provider: "openai" | "anthropic"
DEFAULT_LLM_PROVIDER=openai
# Default model per provider
OPENAI_MODEL=gpt-4.1
ANTHROPIC_MODEL=claude-sonnet-4-6

# --- Database ---
DATABASE_URL=postgresql+asyncpg://overture:overture@localhost:5432/overture
REDIS_URL=redis://localhost:6379/0

# --- Data Sources ---
ALPHA_VANTAGE_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
NEWS_API_KEY=

# X / Twitter API v2 (Bearer Token â€” get from developer.x.com)
X_BEARER_TOKEN=

# --- Application ---
APP_ENV=development
APP_DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000
# Extra CORS origins (comma-separated). Set this in production to your deployed frontend URL.
# Example: CORS_ORIGINS=https://your-frontend.up.railway.app,https://custom-domain.com
CORS_ORIGINS=

# --- RL Training ---
RL_REPLAY_BUFFER_SIZE=10000
RL_BATCH_SIZE=64
RL_LEARNING_RATE=0.001
